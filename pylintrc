[REPORTS]
output-format=colorized

[FORMAT]
# Use max line length of 100
max-line-length=100

[MESSAGES CONTROL]
disable=
    # Currently can't disable per file https://github.com/PyCQA/pylint/issues/214
    consider-using-f-string,  # Python 2
    duplicate-code,
    useless-object-inheritance,  # Python 2
    redundant-u-string-prefix,  # Python 2

[TYPECHECK]
generated-members=ansicon

[BASIC]
# Good variable names which should always be accepted, separated by a comma
good-names=e

[SPELLING]

# Spelling dictionary name. Available dictionaries: en_US (myspell).
spelling-dict=en_US

# List of comma separated words that should not be checked.
spelling-ignore-words=
    acsc, ansicon, API, args, Avram,
    bool,
    cbreak,
    fd, filehandle,
    Lubkin,
    MPL,
    infocmp,
    natively, ncurses, noqa,
    pragma, printf,
    regex, reimplementation,
    setupterm, stderr, stdout, str,
    terminfo, TestCase, tigetflag, tigetnum, tigetstr, tparm, tty, tuple,
    unary, unittest,
