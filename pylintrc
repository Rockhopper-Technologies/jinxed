[REPORTS]
output-format=colorized

[FORMAT]
# Use max line length of 100
max-line-length=100

[MESSAGES CONTROL]
disable=
    # Currently can't disable per file https://github.com/PyCQA/pylint/issues/214
    duplicate-code,
    useless-object-inheritance,

[TYPECHECK]
generated-members=ansicon

[BASIC]
# Good variable names which should always be accepted, separated by a comma
good-names=e

[SPELLING]

# Spelling dictionary name. Available dictionaries: en_US (myspell).
spelling-dict=en_US

# List of comma separated words that should not be checked.
spelling-ignore-words=
    acsc, ansicon, API, Avram,
    cbreak,
    fd, filehandle,
    Lubkin,
    MPL,
    infocmp,
    ncurses, noqa,
    pragma, printf,
    regex, reimplementation,
    setupterm, stdout,
    terminfo, TestCase, tigetflag, tigetnum, tigetstr, tparm, tty,
    unary, unittest,
